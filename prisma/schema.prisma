// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  role      Role      @default(BUYER)
  products  Product[]
  orders    Order[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Product {
  id          Int       @id @default(autoincrement())
  title       String
  description String?   // resta opzionale per compatibilitÃ 
  price       Float
  city        String
  seller      User      @relation(fields: [sellerId], references: [id])
  sellerId    Int

  imageUrl    String?   // ðŸ‘ˆ AGGIUNTO: URL immagine Cloudinary

  // relazione many-to-many implicita verso Order
  orders      Order[]   @relation("OrderProducts")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Order {
  id        Int       @id @default(autoincrement())
  buyer     User      @relation(fields: [buyerId], references: [id])
  buyerId   Int
  // stessa relazione many-to-many
  products  Product[] @relation("OrderProducts")
  total     Float
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum Role {
  BUYER
  SELLER
}
